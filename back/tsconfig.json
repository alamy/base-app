{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "src",
        "declaration": false,
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "incremental": true,
        "lib": [
            "es2018"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "_transpiled",
        "paths": {
            "@app/*": [
                "app/*"
            ],
            "@lib/*": [
                "lib/*"
            ],
            "@mocks/*": [
                "testing/mocks/__mocks__/*"
            ],
            "@models/*": [
                "models/*"
            ],
            "@testing/*": [
                "testing/*"
            ]
        },
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2018",
        "typeRoots": [
            "node_modules/@types",
            "src/typings"
        ]
    },
    "exclude": [
        "node_modules",
        "_transpiled",
        "_templates",
        "migrations/**/*"
    ]
}